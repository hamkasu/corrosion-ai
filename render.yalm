services:
  - type: web
    name: corrosion-ai
    runtime: python
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn app.main:app --host=0.0.0.0 --port=$PORT
    envVars:
      - key: PORT
        value: 10000
      - key: DATABASE_URL
        fromDatabase:
          name: corrosion-db
          property: connectionString
    disk:
      name: model-disk
      mountPath: /var/models